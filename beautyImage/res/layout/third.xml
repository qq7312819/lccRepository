<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:adsmogo="http://www.adsmogo.com"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rl_third_root" >

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/iv_topbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/top_bar" />

        <TextView
            android:id="@+id/tv_third_top"
            style="@style/top_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
             />
        
        <TextView
            android:id="@+id/tv_back"
            android:layout_marginTop="3dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back"
            android:text="@string/back"
            android:textSize="14sp"
            android:paddingLeft="13dp"
            android:paddingTop="6dp"
            android:textColor="#FFFFFF"
            />
        
        <TextView 
            android:id="@+id/save_beauty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/options"
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="3dp"
            android:text="@string/save"
            android:textSize="14sp"
            android:paddingTop="7dp"
            android:paddingLeft="11dp"
            android:textColor="#FFFFFF"
            />
        
    </RelativeLayout>
    
    
   <RelativeLayout
       android:id="@+id/rl_third_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top"
         >

        <LinearLayout
        android:id="@+id/body_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        

	<com.fcapp.beautyimage.widget.MyImageView 
	    android:id="@+id/iv_third_big_image"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    
	    />
        
    </LinearLayout>
    
       <ImageView 
           android:id="@+id/iv_collect"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:layout_alignParentRight="true"
           android:layout_marginRight="30dp"
           android:layout_marginTop="30dp"
           android:src="@drawable/collect_no"
           />
    
    </RelativeLayout>

    

    <com.adsmogo.adview.AdsMogoLayout
        android:id="@+id/adsMogoView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        adsmogo:appid="85686231f205451c9e3de64ab059537b"
        adsmogo:express_mode="false"
        android:layout_alignParentBottom="true"
         />
    
</RelativeLayout>